<div class="container">
    <div class="row">
        {{#if isLoggedIn}}
        <!--Input Comments-->
        <form id="form-comments-add" 
            data-product="{{product.id}}"
            data-user="{{user.id}}">
            <div class="input-group mb-3">
                <input id="input-comments-add" type="text" class="form-control" 
                    placeholder="Input comment here...ADD">
                <div class="input-group-append">
                    <button class="btn btn-primary" 
                            type="submit">POST</button>
                    <button class="btn btn-danger"
                            id="input-comments-add-cancel"
                            type="button">Cancel</button>
                </div>
            </div>
        </form>
        
        <form id="form-comments-edit">
            <div class="input-group mb-3">
                <input id="input-comments-id" type="hidden">
                <input id="input-comments-edit" type="text" class="form-control" placeholder="Input comment here... EDIT">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">POST</button>
                    <button class="btn btn-danger" id="input-comments-edit-cancel" type="button">Cancel</button>
