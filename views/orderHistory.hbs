<div class="container">
    <div class="row bg-dark text-center text-light py-5">
        <h1>Your order history</h1>
    </div>
</div>
<div class="container">
    <table class="table table-hover table-inverse table-responsive">
        <thead class="thead-inverse">
            <tr>
                <th>Order ID</th>
                <th>Datetime</th>
                <th>Details</th>
                <th>Total cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td scope="row">{{id}}</td>
                <td>{{formatDate createdAt}}</td>
                <td><a href="/users/orders/{{id}}">Order details</td>
                <td>${{totalPrice}}</td>
                <td>{{status}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{> errors}}