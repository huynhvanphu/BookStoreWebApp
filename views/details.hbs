<div class="container">
    <div class="row">
        <div class="col-md-4 col-lg-3 my-3">
            <div class="card">
                <img class="card-img-top" src="{{product.imgPath}}" alt="{{product.name}}">
            </div>
            <div class="card-footer">
                <div class="text-left pull-left price">${{product.price}}</div>
            </div>
            <a type="button" data-product="{{product.id}}" class="btn btn-success btn-sm add-to-cart" style="float:right;" href="#" role="button">Add to cart</a>
        </div>
        <div class="col-md-8 col-lg-9 my-3">
            <h1>{{product.name}}</h1>
            <p>{{product.summary}}</p>
            <h2>Book details</h2>
            <p>{{product.description}}</p>
        </div>
    </div>
</div>

