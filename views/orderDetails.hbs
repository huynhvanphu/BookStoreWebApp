<div class="container py-5">
    <div class="row">
        <div class="col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    Billing address
                </div>
                <div class="card-body">
                    <h4 class="card-title">{{order.Contact.firstName}} {{order.Contact.lastName}}</h4>
                    <p class="card-text">{{order.Contact.email}}</p>
                    <p class="card-text">{{order.Contact.phone}}</p>
                    <p class="card-text">
                        {{order.Contact.address}}, {{order.Contact.state}}, {{order.Contact.country}} - {{order.Contact.zip}}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    Ordered at
                </div>
                <div class="card-body">
                    <p class="card-text">{{formatDate order.createdAt}}</p>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    Payment method
                </div>
                <div class="card-body">
                    <p class="card-text">{{order.paymentMethod}}</p>
                </div>
            </div>
            </div>
        </div>
    <div class="row">
        
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Total</th>
                        <th>Â </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orderDetails}}
                    <tr>
                        <td class="col-sm-8 col-md-6">
                            <div class="media">
                                <a class="thumbnail pull-left" href="#"> <img class="media-object" src="{{Product.imgPath}}"
                                        style="width: 72px;"> </a>
                                <div class="media-body">
                                    <h4 class="media-heading">{{Product.name}}</h4>
                                    <h5 class="media-heading">Brand name</h5>
                                    <span>Status: </span><span class="text-success"><strong>In Stock</strong></span>
                                </div>
                            </div>
                        </td>
                        <td class="col-sm-1 col-md-1" style="text-align: center">
                            <strong>{{quantity}}</strong>
                        </td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>${{Product.price}}</strong></td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>${{price}}</strong></td>
                        <td class="col-sm-1 col-md-1">
                            {{!-- <button type="button" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button> --}}
                        </td>
                    </tr>
                    {{/each}}
                    <tr style="text-align: center; font-weight: bold; font-size: 1.2em;">
                        <td>Total quantity</td>
                        <td>{{order.totalQuantity}}</td>
                        <td>Total cost</td>
                        <td>${{order.totalPrice}}</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
        
    </div>
</div>