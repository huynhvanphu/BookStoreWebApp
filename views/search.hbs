<div class="container">
    <div class="row">
        <h2>Search results</h2>
        <h4>There are {{count}} results for key word <strong>{{key}}</strong></h4>
    </div>
</div>
<div class="container">
    <div class="row">
        {{#each products}}
        <div class="col-md-4 col-lg-3 my-3">
            <div class="card">
                <a href="/products/{{id}}" alt="Click to view details">
                    <img class="card-img-top" src="{{imgPath}}" height="440px" alt="{{name}}">
                </a>
                <div class="card-body">
                    <h4 class="card-title">{{name}}</h4>
                    <p class="card-text">{{summary}}</p>
                </div>
                <div class="card-footer">
                    <div class="text-left pull-left price">${{price}}</div>
                    <a name="" id="" class="btn btn-success btn-sm" style="float:right;" href="#" role="button">Add
                        to cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>